{
  "name": "github-productivity",
  "displayName": "Github Productivity",
  "description": "A VS Code extension for tracking coding activity with Git integration.",
  "version": "0.0.1",
  "publisher": "favouremeleonu",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "github-productivity.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "github-productivity.activate",
        "title": "Activate GitHub Productivity"
      },
      {
          "command": "github-productivity.restart",
          "title": "Restart GitHub Productivity"
      },
      {
          "command": "github-productivity.disable",
          "title": "Disable GitHub Productivity"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Github Productivity",
      "properties": {
        "githubProductivity.timerDurationMinutes": {
          "type": "number",
          "default": 30,
          "description": "The timer duration in minutes for logging coding activity."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "npx tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  }
}
